@model Blog.Models.BlogPost

@{
    ViewBag.Title = "Create";
}




<!-- ==============================================
     CREATE POST
=============================================== -->

<section id="blog" class="big-padding">

    <div class="container">

        <h2>Create</h2>

        <form action="@Url.Action("Create")" method="post" enctype="multipart/form-data">
       
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>BlogPost</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                
                
                <div class="form-group"><!-- Begin Title -->
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div><!-- End Title -->

                

                <div class="form-group"><!-- Begin Body -->
                    @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control nanye-blog-body" } })
                        @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                    </div>
                </div><!-- End Body -->

                <div class="form-group"><!-- Begin Image -->
                    <h4 class="control-label col-md-2">Add Image</h4>
                    <div class="col-md-10">
                        <input name="image" type="file" class="form-control" id="fileUpload" />
                    </div>
                </div><!-- End Image -->
                
                <div class="form-group"><!-- Begin Category -->
                    @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Category, new SelectList(new string[] { "Personal", "Professional", "Testing" }), new { htmlAttributes = new {@class = "form-control" } })
                       
                        @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                    </div>
                </div><!-- End Category -->


                <div class="form-group"><!-- Begin Published -->
                    @Html.LabelFor(model => model.Published, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Published)
                            @Html.ValidationMessageFor(model => model.Published, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div><!-- End Published -->

                <div class="form-group"><!-- Create Button -->
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div><!-- End Submit Button -->
            </div><!-- End form-horizontal -->
       

    </form><!-- End Form -->

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div><!-- End Container --> 

</section><!-- End Section -->

@section Scripts {
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script>
        $(document).ready(function () {
            $('textarea').tinymce({});
        });
    </script>
}
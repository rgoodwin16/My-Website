@model Blog.Models.Comment
@{
    ViewBag.Title = "Delete";
}

<!-- ==============================================
     DELETE COMMENT
=============================================== -->

<section class="big-padding">

    <div class="container">

        <h2>Are you sure you want to delete this?</h2>

        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Created)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Created)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Updated)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Updated)
                </dd>
                                
                <dt>
                    @Html.DisplayNameFor(model => model.Body)
                </dt>

                <dd>
                    @Html.Raw(Model.Body)
                </dd>
                
            </dl>

            @using (Html.BeginForm("DeleteComment","BlogPosts"))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-actions no-color">
                    <input type="button" class="btn btn-default" value="Back to Post" onclick="location.href='@Url.Action("Details", "BlogPosts", new { slug = Model.Post.Slug})'"/>
  | <input type="submit" value="Delete" class="btn btn-danger" />

                </div>
            }

        </div>
        

    </div><!-- end container -->

</section><!-- End Section -->

